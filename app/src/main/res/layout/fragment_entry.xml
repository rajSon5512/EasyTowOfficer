<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal|italic"
            android:text="@string/choose_option"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="30dp"
            android:paddingEnd="50dp"
            android:paddingStart="50dp"
            android:paddingTop="30dp">


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/camera_Button"
                style="@style/EntryButtonStyle"
                android:contentDescription="@string/entry_via_camera"
                android:src="@drawable/ic_camera_alt_black_24dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

<!--
            <ImageButton
                android:id="@+id/text_Button"
                style="@style/EntryButtonStyle"
                android:src="@drawable/ic_title_black_24dp" />
-->


            <ImageButton
                android:id="@+id/mic_button"
                style="@style/EntryButtonStyle"
                android:src="@drawable/ic_mic_black_24dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:id="@+id/vehicle_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/vehicle_details"
            android:textSize="@dimen/big_font_size"
            android:textStyle="bold"
            android:textAppearance="?android:attr/listSeparatorTextViewStyle" />


        <EditText
            android:id="@+id/vehicle_details_box"
            android:hint="@string/vehicle_number"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_owner_name"
                android:padding="5dp"
                android:textSize="@dimen/medium_font_size" />

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="@dimen/medium_font_size" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/owner_mobile_number"
                android:padding="5dp"
                android:textSize="@dimen/medium_font_size" />

            <TextView
                android:id="@+id/owner_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="@dimen/medium_font_size" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_type"
                android:padding="5dp"
                android:textSize="@dimen/medium_font_size" />

            <TextView
                android:id="@+id/vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="@dimen/medium_font_size" />

        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textfine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Fine"
                android:padding="5dp"
                android:textSize="@dimen/medium_font_size" />

            <TextView
                android:id="@+id/fine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textfine"
                android:layout_marginLeft="55dp"
                android:padding="5dp"
                android:textSize="@dimen/medium_font_size" />

            <TextView
                android:id="@+id/movinglocation"
                android:layout_width="wrap_content"
                android:layout_below="@+id/fine"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/movinglocation"
                android:textSize="@dimen/medium_font_size" />

            <Spinner
                android:id="@+id/locationselecter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autofillHints="@string/destination"
                android:layout_alignStart="@+id/movinglocation"
                android:layout_below="@+id/movinglocation">

            </Spinner>


        </RelativeLayout>

        <Button
            android:id="@+id/fetch_info_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/medium_font_size"
            android:text="@string/fetch_info" />



    </LinearLayout>


</ScrollView>